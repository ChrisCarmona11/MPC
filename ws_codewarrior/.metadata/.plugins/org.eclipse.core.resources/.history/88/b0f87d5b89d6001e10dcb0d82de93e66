void lptmr_clear_registers()
{
  LPTMR0_CSR=0x00;
  LPTMR0_PSR=0x00;
  LPTMR0_CMR=0x00;
}

int main(void)
{
	lptmr_time_counter_configure();
	  
	for(;;) {
		if((LPTMR0_CSR & LPTMR_CSR_TCF_MASK)!=0){
			
			printf("Current value of counter register CNR is %d\n",LPTMR0_CNR);
			LPTMR0_CSR|=LPTMR_CSR_TCF_MASK;
		}
	}
	
	return 0;
}
